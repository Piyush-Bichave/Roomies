  <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>


  <script>
    function selectRoom(userData, roomId) {
      alert("Room select successfully");

      fetch('/room-selection', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ userData, roomId })
      })
        .then((response) => response.json())
        .then((data) => {
          // Handle the response data here
        })
        .catch((error) => {
          console.error('Error:', error);
        });
    }
  </script>


  <script>
    const filterButton = document.getElementById('filterButton');
    const priceFilter = document.getElementById('priceFilter');

    // Toggle visibility of the price filter dropdown
    filterButton.addEventListener('click', function () {
      priceFilter.style.display = priceFilter.style.display === 'none' ? 'block' : 'none';
    });

    // Add event listeners to each option
    priceFilter.addEventListener('change', function () {
      const selectedPriceRange = priceFilter.value;
      // Redirect to the filter route based on the selected option
      if (selectedPriceRange === '1000-2000') {
        window.location.href = '/filter?min=1000&max=2000';
      } else if (selectedPriceRange === '2000-3000') {
        window.location.href = '/filter?min=2000&max=3000';
      } else if (selectedPriceRange === '3000-4000') {
        window.location.href = '/filter?min=3000&max=4000';
      }
    });
  </script>


